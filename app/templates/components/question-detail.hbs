<div class="questionDetails">
  <div class="container">
    <h1>{{ question.content }}</h1>
    <h2>Asked by: {{ question.author }}</h2>
    <h3>Additional Notes: {{ question.notes }}</h3>
    {{#if itemFavorited}}
      <p class="favorited"><i class="fa fa-star"></i>Favorited</p>
    {{else}}
      <button {{action 'addToFavorites' question}} class="yellowBtn">Favorite this Question</button>
    {{/if}}
    {{update-question question=question updateQuestion="updateQuestion" }}
    <hr>
    <button class="secondaryBtn"{{action 'delete' question}}>Delete this question</button>
  </div>
</div>
<div class="container">
  Total Answers: {{totalAnswers}}
  {{ new-answer saveAnswer="saveAnswer" question=question}}
  {{#each question.answers as |answer|}}
  <div class="answerItem">
    {{answer-tile answer=answer}}
    <button {{action 'addToVotes' answer}}>Vote for this answer</button>
    Votes: {{this.totalVotes.votes.length}}
  </div>
  {{/each}}
</div>

