{{#liquid-if newQuestionForm class="fade-demo"}}
<div class="createQuestionSection">
  <h2>Add New Question</h2>
  <form class="createQuestionForm">
      <label for="content">Question</label>
      {{input value=content id="content"}}
      <label for="author">Your Name</label>
      {{input value=author id="author"}}
      <label for="notes">Additional Notes</label>
      {{textarea value=notes id="notes"}}
    <button class="primaryBtn"{{action 'saveQuestion'}}>Post Question</button>
  </form>
  <button class="secondaryBtn" {{action 'toggleDetail'}}>Cancel</button>
</div>
{{else}}
  <div class="createQuestionSection">
    <button class="bigBtn" {{action 'toggleDetail'}}>Add New Question</button>
  </div>
{{/liquid-if}}
