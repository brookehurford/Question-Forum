{{#if newAnswerForm}}
<div class="newAnswerForm">
  <h2>Add New Question</h2>
  <form>
      <label for="content">Answer</label>
      {{input value=content id="content"}}
      <label for="author">Your Name</label>
      {{input value=author id="author"}}
    <button class="primaryBtn"{{action 'saveAnswer'}}>Post Answer</button>
  </form>
  <button class="secondaryBtn"{{action 'toggleDetail'}}>Cancel</button>
</div>
{{else}}
  <div class="newAnswerForm">
    <button class="primaryBtn"{{action 'toggleDetail'}}>Add an Answer</button>
  </div>
{{/if}}
